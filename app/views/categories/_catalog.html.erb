<p id="notice"><%= notice %></p>

<h1>Каталог</h1>

<div class="catalog">
    <div class="category-name">
      <%= link_to 'Все продукты', products_path %>
    </div>
    <% @categories.each do |category| %>
      <div class="category-name">
        <a><%= link_to category.name, category_path(category) %></a>
      </div>
    <% end %>
</div>
