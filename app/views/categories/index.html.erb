<div class="content">
  <p id="notice"><%= notice %></p>

  <h2>Каталог</h2>

  <div class="catalog">
      <div class="category-name">
        <%= link_to 'Все продукты', products_path %>
      </div>
      <% @categories.each(&:save) do |category| %>
        <div class="category-name">
          <a><%= link_to category.name, category %></a>
        </div>
      <% end %>
  </div>

  <%= link_to 'New Category', new_category_path %>
</div>
