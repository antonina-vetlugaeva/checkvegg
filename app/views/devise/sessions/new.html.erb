<section class="user-form">
    <h1 class="title">Войдите в аккаунт или <span class="other-user-option"><%= link_to "зарегистрируйтесь", new_registration_path(resource_name) %></span></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, 'Email' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, 'Пароль' %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field rememberable">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Запомнить меня', class:"remember" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Войти", class:"A_Button login-button" %>
    </div>

    <div class="forgot-password"><%= link_to "Забыли пароль?", new_password_path(resource_name) %></div>
  <% end %>

  <%#= render "devise/shared/links" %>
</section>
