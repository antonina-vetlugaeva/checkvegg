<%= form_with(model: [@category, @product, product_item], local: true) do |form| %>
  <% if product_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_item.errors.count, "error") %> prohibited this product_item from being saved:</h2>

      <ul>
        <% product_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.number_field :product_id %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.number_field :category_id %>
  </div>

  <div class="field">
    <%= form.label :ingridient_id %>
    <%= form.select :ingridient_id, Ingridient.all.collect { |i| [i.name, i.id] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
