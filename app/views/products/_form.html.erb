<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>Категория</p>
    <%= form.select :category_id, Category.all.collect { |c| [c.name, c.id] } %>
  </div>

  <div class="field">
    <p>Название продукта</p>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <p>Производитель</p>
    <%= form.select :brand_id, Brand.all.collect { |b| [b.name, b.id] } %>
  </div>

  <div class="field">
    <p>Тип продукта</p>
    <%= form.select :type_id, Type.all.collect { |t| [t.name, t.id] } %>
  </div>

  <div class="field">
    <p>ПЖП</p>
    <%= form.collection_check_boxes :ingridient_ids, Ingridient.all, :id, :name %>
  </div>

  <div class="field">
    <p>Состав</p>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <p>Фотография</p>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>


<% end %>
