<p>
<strong>Name:</strong>
<%= product.name %>
</p>

<p>
<strong>Description:</strong>
<%= product.description %>
</p>

<% if controller_name == 'categories' %>
  <%= link_to 'Показать', category_product_path(product.category) %>
  <%= link_to 'Редактировать продукт', edit_category_product_path(product.category) %>
<% else %>
  <%= link_to 'Показать', product_path(product) %>
  <%= link_to 'Редактировать продукт', edit_product_path(product) %>
<% end %>
